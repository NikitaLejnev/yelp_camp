<% layout('layouts/boilerplate')%>
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form enctype="multipart/form-data" class="form-validated" action="/campgrounds/<%=campground._id%>?_method=PUT"
        method="POST" novalidate>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>"
            required />
          <%- include('../partials/valid') %>
        </div class="mb-3">
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="campground[location]"
            value="<%=campground.location%>" required />
          <%- include('../partials/valid') %>
        </div>
        <div class="mb-3">
          <label for="formFileMultiple" class="form-label">Add more images</label>
          <input class="form-control" type="file" id="form" multiple>
          <%- include('../partials/valid') %>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Campground price</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="price-label">$</span>
            </div>
            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
              value="<%=campground.price%>" aria-describedby="price-label" name="campground[price]" required>
            <%- include('../partials/valid') %>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" name="campground[description]" required>
                  <%= campground.description %>
                </textarea>
        </div>
        <div class="mb-3">
          <% campground.images.forEach((img, i) => { %>
            <img class="img-thumbnail" src="<%= img.url %>" alt="Campground images before edit">
            <div class="form-check-inline">
              <input type="checkbox" value="<%=img.filename%>" name="deleteImages[]" id="image-<%=i%>">
            </div>
            <label for="image-<%=i%>">Delete image</label>
          <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Update Campgrounds</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>"> Back to campground</a>
    </div>
  </div>